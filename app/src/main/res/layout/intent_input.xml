<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actions_title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.google.android.testdpc.common.ReselectionSpinner
                android:id="@+id/list_of_actions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        <Button
                android:id="@+id/btn_add_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories_title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Spinner
                android:id="@+id/list_of_categories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        <Button
                android:id="@+id/btn_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"/>

    </LinearLayout>

    <TextView
            android:id="@+id/data_schemes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_schemes_title"/>

    <LinearLayout
            android:id="@+id/data_schemes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Spinner
                android:id="@+id/list_of_data_schemes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        <Button
                android:id="@+id/btn_add_data_scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"/>

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#333333"
            android:padding="10dip"/>

    <TextView
            android:id="@+id/tv_intent_filter"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:scrollbars="vertical"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#333333"
            android:padding="10dip"/>

</LinearLayout>
